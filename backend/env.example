# Database - 方式一：使用 DATABASE_URL（Railway 等云平台推荐）
# DATABASE_URL=postgresql://username:password@host:port/database

# Database - 方式二：使用独立配置（本地开发推荐）
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=todolist

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis配置（用于缓存和限流，可选）
# 格式: redis://[password@]host:port[/db]
# 如果不配置，将使用内存缓存（不推荐生产环境）
REDIS_URL=redis://localhost:6379/0
# 或使用密码认证:
# REDIS_URL=redis://password@localhost:6379/0
# Railway等云平台会自动注入REDIS_URL环境变量

# 智谱AI GLM4
ZHIPU_API_KEY=your-zhipu-api-key

# Server
PORT=3000
NODE_ENV=development

# Backend URL (for payment redirect)
BACKEND_URL=http://localhost:3000

# Frontend (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# 对象存储配置（可选）
# 支持的存储类型: oss (阿里云), cos (腾讯云), s3 (AWS S3 或兼容)
STORAGE_TYPE=s3

# 阿里云 OSS 配置
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your-access-key-id
OSS_ACCESS_KEY_SECRET=your-access-key-secret
OSS_BUCKET=your-bucket-name# 腾讯云 COS 配置
COS_SECRET_ID=your-secret-id
COS_SECRET_KEY=your-secret-key
COS_REGION=ap-guangzhou
COS_BUCKET=your-bucket-name
COS_BASE_URL=https://your-bucket.cos.ap-guangzhou.myqcloud.com# AWS S3 配置（也兼容其他 S3 兼容存储，如 MinIO、DigitalOcean Spaces）
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=your-bucket-name
S3_ENDPOINT=  # 可选，用于兼容 S3 的存储（如 MinIO: http://localhost:9000）
S3_FORCE_PATH_STYLE=false  # 某些兼容 S3 的存储需要设置为 true
